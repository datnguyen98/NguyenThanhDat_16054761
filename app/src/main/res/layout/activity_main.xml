<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/taikhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tai Khoan"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="46dp" />

        <EditText
            android:id="@+id/tk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="khong duoc de trong"
            android:inputType="text|textPersonName"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="25dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/matkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mat Khau"
            tools:layout_editor_absoluteX="wrap_content"
            tools:layout_editor_absoluteY="wrap_content" />

        <EditText
            android:id="@+id/mk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="khong duoc de trong"
            android:inputType="text|textPassword"
            tools:layout_editor_absoluteX="wrap_content"
            tools:layout_editor_absoluteY="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Luu thong tin" />

        <Button
            android:id="@+id/btnDN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dang Nhap" />
        <Button
            android:id="@+id/btnThoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thoat" />

    </LinearLayout>

</LinearLayout>